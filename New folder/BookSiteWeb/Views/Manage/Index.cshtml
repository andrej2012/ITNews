@model BookSiteWeb.Models.IndexViewModel
@{
    ViewBag.Title = "Профиль";
}

<h2>Профиль пользователя</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<hr />

<div>
    <dl class="dl-horizontal">
        <dt>
            Имя пользователя
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MyUser.UserName)
        </dd>
        <dt>
            Возраст
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MyUser.Age)
        </dd>
        <dt>
            Фото
        </dt>
        <dd>
            <img src="@Html.Raw(Model.MyUser.ImageURL)" width="300" />
        </dd>
        <dt>
            Информация о себе
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MyUser.Description)
        </dd>
    </dl>
</div>
<div>
    <div class="dl-horizontal">
        <div class="btn btn-default">
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Смена пароля", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Создать", "SetPassword")
            }            
        </div>
        <div class="btn btn-default">
            @Html.ActionLink("Редактирование", "Edit", new { userId = User.Identity.Name })
        </div>
        <div class="btn btn-default">
            @Html.ActionLink("Пользователи", "Users")
        </div>
        <div class="btn btn-default">
            @Html.ActionLink("Новости", "IndexNews", new { userId = User.Identity.Name })
        </div>
    </div>
</div>
